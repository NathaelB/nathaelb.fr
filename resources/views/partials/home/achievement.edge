                <div class="p-5 space-y-3">
                  <p class="duration-300 text-white text-3xl font-medium">{{ achievement.label }}</p>
                  <p class="delay-100 duration-300 text-white" x-intersect="reveal($el)">{{ achievement.description }}</p>
                </div>
              </div>
            </div>
          </div>
